{
  "manifest_version": 3,
  "name": "Math Solver Agent",
  "version": "1.0",
  "description": "Send math queries to a local FastAPI AI agent.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"]
}
